profiles {
    singularity {
        singularity.enabled     = true
        singularity.autoMounts  = true
        singularity.cacheDir    = "${HOME}/singularity_cache"
    }
}

process {
    executor       = 'slurm'
    clusterOptions = '-q secondary'
    container      = 'docker://go2432/xengsort:latest'

    withName: 'INDEX' {
        cpus   = 16
        memory = '80 GB'
        time   = '24h'
    }
    withName: 'SORT_READS' {
        cpus   = 8
        memory = '32 GB'
        time   = '12h'
    }
}
