params {
    // 1. Pipeline Inputs
    study_name      = "U251_Therapy_Response"
    outdir          = "./ANALYSIS/results_therapy"

    // 2. GSEA Inputs
    gsea_run        = true
    // THE FIX: This is the ONLY parameter v1.5.0 accepts for gene sets
    gene_sets_files = "${PWD}/ANALYSIS/refs/pathways/combined_human.gmt"
    
    // 3. GSEA Statistics
    gsea_permute    = 'gene_set'
    gsea_metric     = 'Signal2Noise'
    gsea_rnd_seed   = '1234'
    
    // 4. gProfiler Inputs
    gprofiler2_run      = true
    gprofiler2_organism = 'hsapiens'

    // 5. Differential Settings
    differential_subset_to_contrast_samples = true
    deseq2_min_replicates_for_replace = 7
}
